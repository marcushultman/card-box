{
  "tasks": {
    "start": "deno task sw & deno run -A --unstable --watch=static/,routes/ dev.ts",
    "sw": "deno bundle --watch sw/index.ts static/firebase-messaging-sw.js"
  },
  "importMap": "./import_map.json",
  "lock": false,
  "fmt": {
    "options": {
      "singleQuote": true,
      "lineWidth": 100
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
